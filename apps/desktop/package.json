{
  "name": "@vanilla-dns/desktop",
  "version": "1.0.0",
  "description": "Vanilla DNS Changer - Desktop Application",
  "author": {
    "name": "SudoLite",
    "email": "contact@sudolite.dev",
    "url": "https://x.com/sudolite"
  },
  "license": "MIT",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "pnpm run build:main && pnpm run build:preload && vite build && electron-builder",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:vite": "vite build",
    "build:win": "pnpm run build:main && pnpm run build:preload && vite build && electron-builder --win --publish never",
    "build:mac": "pnpm run build:main && pnpm run build:preload && vite build && electron-builder --mac --publish never",
    "build:linux": "pnpm run build:main && pnpm run build:preload && vite build && electron-builder --linux --publish never",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist release",
    "electron:dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@vanilla-dns/shared": "workspace:*",
    "electron-updater": "^6.1.7",
    "sudo-prompt": "^9.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "daisyui": "^4.4.24",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^10.17.9",
    "lucide-react": "^0.303.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0",
    "zustand": "^4.4.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vanilla-DNSChanger/vanilla-dns-changer.git",
    "directory": "apps/desktop"
  },
  "build": {
    "appId": "com.sudolite.vanilla-dns",
    "productName": "Vanilla DNS Changer",
    "artifactName": "Vanilla-DNS-Changer-${version}-${arch}.${ext}",
    "copyright": "Copyright Â© 2025 SudoLite",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "Vanilla-DNS-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icons",
      "category": "Utility",
      "executableName": "vanilla-dns-changer"
    },
    "deb": {
      "artifactName": "Vanilla-DNS-Changer-${version}-${arch}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Vanilla-DNSChanger",
      "repo": "vanilla-dns-changer"
    }
  }
}
